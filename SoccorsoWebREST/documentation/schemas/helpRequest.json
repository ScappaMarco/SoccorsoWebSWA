{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://swa.net/schemas/request",
    "type": "object",
    "properties": {
        "id": {
            "type":"intteger",
            "minimum": 1
        },
        "description": {
            "type":"string"
        },
        "position": {
            "type": "object",
            "properties": {
                "address": {
                    "type":"string"
                },
                "coordinates": {
                    "type":"string"
                }
            }
        },
        "reporter": {
            "type":"object",
            "properties": {
                "name": {
                    "type":"string"
                },
                "email": {
                    "type":"string",
                    "format":"email"
                }
            }
        },
        "status": {
            "type":"string",
            "enum": [
                "attiva",
                "in_corso",
                "chiusa",
                "ignorata"
            ]
        },
        "mission": {
            "type":"object",
            "properties": {
                "teamLeader": {
                    "$ref":"/schemas/operator"
                },
                "team": {
                    "type":"array",
                    "itmes": {
                        "$ref":"/schema/operator"
                    }
                },
                "objective": {
                    "type":"string"
                },
                "startTime": {
                    "type":"string",
                    "format":"date-time"
                }, 
                "endTime": {
                    "type":"string",
                    "format":"date-time"
                },
                "successLevel": {
                    "type":"integer",
                    "minimum":0,
                    "maximum":5
                }
            }
        }
    },
    "required": ["position", "reporter", "status"],
    "additionalProperties":false
}